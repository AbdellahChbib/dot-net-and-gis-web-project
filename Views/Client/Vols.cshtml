@model IEnumerable<GisServerProject.Models.Vol>

@{
    ViewData["Title"] = "Liste des Vols";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom Vol</th>
            <th>Départ</th>
            <th>Destination</th>
            <th>Prix (€)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var vol in Model)
    {
        <tr>
            <td>@vol.NomVol</td>
            <td>@vol.Depart</td>
            <td>@vol.Destination</td>
            <td>@vol.Prix</td>
            <td>
                <!-- IMPORTANT: asp-route-id ici pour correspondre à paramètre id -->
                <a asp-action="Reserver" asp-route-id="@vol.Id" class="btn btn-primary btn-sm">Réserver</a>
            </td>
        </tr>
    }
    </tbody>
</table>
