@model GisServerProject.Models.Vol

@{
    ViewData["Title"] = "Supprimer Vol";
}

<h2>Supprimer Vol</h2>

<h3>Êtes-vous sûr de vouloir supprimer ce vol ?</h3>

<div>
    <h4>@Model.NomVol</h4>
    <p>Départ : @Model.Depart</p>
    <p>Destination : @Model.Destination</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Vols" class="btn btn-secondary">Annuler</a>
</form>
